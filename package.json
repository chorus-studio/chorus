{
    "name": "chorus",
    "version": "2.1.0",
    "devDependencies": {
        "@lucide/svelte": "^0.486.0",
        "@tailwindcss/container-queries": "^0.1.1",
        "@tailwindcss/vite": "^4.0.0",
        "@tsconfig/svelte": "^5.0.4",
        "@types/chrome": "^0.0.280",
        "@wxt-dev/module-svelte": "^2.0.0",
        "autoprefixer": "^10.4.20",
        "bits-ui": "^1.3.16",
        "clsx": "^2.1.1",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "lucide-svelte": "^0.475.0",
        "prettier-plugin-svelte": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "svelte": "^5.1.16",
        "svelte-check": "^4.0.7",
        "svelte-sonner": "https://pkg.pr.new/wobsoriano/svelte-sonner@126",
        "tailwind-merge": "^3.0.1",
        "tailwind-variants": "^0.3.1",
        "tailwindcss": "^3.4.17",
        "tailwindcss-animate": "^1.0.7",
        "tslib": "^2.8.1",
        "typescript": "^5.6.3",
        "wxt": "^0.19.13"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pnpm lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,json,css,md}": "prettier --write"
    },
    "private": true,
    "scripts": {
        "dev": "wxt",
        "dev:fox": "wxt -b firefox",
        "build": "wxt build",
        "build:fox": "wxt build -b firefox --mv3",
        "zip": "wxt zip",
        "zip:fox": "wxt zip -b firefox --mv3",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "postinstall": "wxt prepare && cd node_modules/mellowtel && bun install && bun run build",
        "prepare": "node .husky/install.mjs"
    },
    "type": "module",
    "dependencies": {
        "@webext-core/proxy-service": "^1.2.1",
        "mellowtel": "git@github.com:aria-studio/mellowtel-js.git#ext-mode",
        "mode-watcher": "^0.5.1",
        "standardized-audio-context": "^25.3.77"
    }
}
